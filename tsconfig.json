{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"types": ["node", "vscode", "jest"],
		"skipLibCheck": true,
		"outDir": "out",
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./test"],
		"paths": {
			"~/shared": ["src/shared/index.ts"],
			"~/shared/*": ["src/shared/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts",
		"test/**/*.ts",
		"test/**/*.d.ts",
		"*.config.ts"
	]
}
