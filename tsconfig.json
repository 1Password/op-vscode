{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"moduleResolution": "Bundler",
		"strict": true,
		"types": [
			"node",
			"vscode"
		],
		"skipLibCheck": true,
		"outDir": "out",
		"baseUrl": "."
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts",
		"*.config.ts"
	],
	"exclude": [
		"**/*.test.ts"
	]
}
