{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Desktop)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "preLaunchTask": "watch:desktop",
      "outFiles": [
        "${workspaceFolder}/dist/desktop/**/*.js"
      ]
    },
    {
      "name": "Run Extension (Web)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "preLaunchTask": "watch:web",
      "outFiles": [
        "${workspaceFolder}/dist/web/**/*.js"
      ]
    }
  ]
}
